{
    "files.autoSave": "onWindowChange",
    "files.autoSaveDelay": 2000,
    "editor.tabSize": 2,
    "editor.formatOnSave": true,
    "[typescript]": {
        "editor.formatOnSave": false
    },
    "[markdown]": {
        "editor.formatOnSave": true
